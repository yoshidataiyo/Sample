<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".InsertActivity">


<TextView
        android:text="備考："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="48dp"/>
<TextView
        android:text="値段："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="32dp"/>
<EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editPrice"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="48dp" app:layout_constraintBaseline_toBaselineOf="@+id/textView2"/>
<EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editName"
        app:layout_constraintStart_toEndOf="@+id/textView"
        android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="48dp" app:layout_constraintBaseline_toBaselineOf="@+id/textView"/>
<Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/editPrice"
        app:layout_constraintStart_toEndOf="@+id/textView4" app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/textView5"/>
    <TextView
            android:text="支出"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintBaseline_toBaselineOf="@+id/switch1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="108dp" android:textAllCaps="false"/>
<TextView
        android:text="収入"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        app:layout_constraintBaseline_toBaselineOf="@+id/switch1"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="108dp"/>
<Button
        android:text="追加"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add" android:layout_marginTop="108dp"
        app:layout_constraintTop_toBottomOf="@+id/switch1" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>